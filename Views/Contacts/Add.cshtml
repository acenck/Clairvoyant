@{
}



<div class="text-center">
    <h1>New Contact</h1>
</div>

<form asp-action="add" method="post">

    <div>
        <label>
            First name
            <input type="text" name="FirstName" class="form-control" />
        </label>
    </div>
    <div>
        <label>
            Last name
            <input type="text" name="LastName" class="form-control" />
        </label>
    </div>
    <div>
        <label>
            Phone
            <input type="text" name="Phone" class="form-control" />
        </label>
    </div>
    <div>
        <label>
            Email
            <input type="email" name="Email" class="form-control" />
        </label>
    </div>


    <div class="form-check inline">
        <input class="form-check-input"
               type="checkbox"
               value=""
               id="flexCheckDefault" />
        <label class="form-check-label" for="flexCheckDefault">
            Toggle Custom Message
        </label>
    </div>



    <div class="form-check inline">
        <label>
            Event Name
            <input type="text" name="EventType.Name" class="form-control" />
        </label>
    </div>
    <div class="form-check inline">
        <label>
            Message
            <input type="text" name="EventType.Message" class="form-control" />
        </label>
    </div>

    <div class="form-group inline">
        <label class="col-2 col-form-label">Date</label>
        <div class="col-10">
            <input class="form-control" name ="EventType.Date" type="datetime-local" value="2021-03-018T13:45:00" id="example-datetime-local-input">
        </div>
    </div>


    <input type="submit" class="btn btn-primary" value="Confirm" /><input type="submit" class="btn btn-outline-primary" value="Cancel" />

</form>





