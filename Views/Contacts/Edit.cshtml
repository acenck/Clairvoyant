@{
}

@using Clairvoyant.Models

@model Contact

<div class="text-center">
    <h1>
        Edit Contact
    </h1>
</div>

<form asp-action="edit"  center="text-center">

    
    <input type="hidden" value="@Model.Id" name="contactId" />

    <div>
        <label>
            First Name
            <input type="text" name="FirstName" class="form-control" value="@Model.FirstName" />
        </label>
    </div>
    <div>
        <label>
            Last Name
            <input type="text" name="LastName" class="form-control" value="@Model.LastName" />
        </label>
    </div>
    <div>
        <label>
            Phone
            <input type="text" name="Phone" class="form-control" value="@Model.Phone" />
        </label>
    </div>
    <div>
        <label>
            Email
            <input type="email" name="Email" class="form-control" value="@Model.Email" />
        </label>
    </div>

    <div>
    <input type="submit" class="btn btn-primary" value="Save" /><input type="submit" class="btn btn-outline-primary" value="Cancel" />
    </div>



</form>















