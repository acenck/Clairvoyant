@{
}

<div class="text-center">
    <h1>
        Edit Contact
    </h1>
</div>

<form method="post" action="/contacts/edit" center="text-center">

    @{ var cnt = ViewBag.contactToEdit;}
    <input type="hidden" value="@ViewBag.contactToEdit.Id" name="contactId" />

    <div>
        <label>
            First Name
            <input type="text" name="FirstName" class="form-control" value="@cnt.FirstName" />
        </label>
    </div>
    <div>
        <label>
            Last Name
            <input type="text" name="LastName" class="form-control" value="@cnt.LastName" />
        </label>
    </div>
    <div>
        <label>
            Phone
            <input type="text" name="Phone" class="form-control" value="@cnt.Phone" />
        </label>
    </div>
    <div>
        <label>
            Email
            <input type="email" name="Email" class="form-control" value="@cnt.Email" />
        </label>
    </div>

    <div>
    <input type="submit" class="btn btn-primary" value="Save" /><input type="submit" class="btn btn-outline-primary" value="Cancel" />
    </div>



</form>















