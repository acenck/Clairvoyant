@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Clairvoyant</h1>
    <p>This is the foundation page for our new Liftoff app.</p>

    
</div>

<div>
    <table class="table">
        <tr>
            <td><a asp-controller="Contacts" asp-action="Add">Add Contact</a></td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </table>
</div>


<form>

    <div class="d-flex">
        <label for="exampleInputContact"></label>
        <input class="form-control" type="text" id="Contact" aria-describedby="Contact" placeholder="Search">
        <button type="submit" class="btn btn-primary">></button>
        
    </div>
   
    

</form>




@if(ViewBag.contacts.Count == 0)
{
    <div class="text-center">
        <p>No Contact library empty</p>
    </div>
}
else
{
  <div class="container">
      <table class="table table-hover">

          @foreach (var contact in ViewBag.contacts)
          {
              
              <tr onclick="location.href = '@(Url.Action("Edit", "Contacts", new { contactId = contact.Id }))'">
                  <td>@contact.FirstName</td>
                  <td>@contact.LastName</td>
              </tr>
                  
          }
              
      </table>
  </div>








}